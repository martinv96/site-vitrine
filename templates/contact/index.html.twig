{# templates/contact/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Contactez-nous - VitrinePro{% endblock %}

{% block body %}
<div class="min-h-screen bg-gradient-to-br from-white via-blue-50 to-gray-100 flex flex-col mt-8">
<main class="flex-grow w-full max-w-screen-xl mx-auto px-8 py-16 bg-white rounded-xl shadow-md">

    <h1 class="text-4xl font-extrabold text-blue-700 mb-10 text-center">Contactez-nous</h1>

    {{ form_start(form, {'attr': {'class': 'space-y-8'}}) }}

      <div>
        {{ form_label(form.name, 'Nom complet', {'label_attr': {'class': 'block mb-2 font-semibold text-gray-700'}}) }}
        {{ form_widget(form.name, {'attr': {'class': 'w-full border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400'}}) }}
        {{ form_errors(form.name, {'attr': {'class': 'text-red-600 text-sm mt-1'}}) }}
      </div>

      <div>
        {{ form_label(form.email, 'Adresse email', {'label_attr': {'class': 'block mb-2 font-semibold text-gray-700'}}) }}
        {{ form_widget(form.email, {'attr': {'class': 'w-full border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400'}}) }}
        {{ form_errors(form.email, {'attr': {'class': 'text-red-600 text-sm mt-1'}}) }}
      </div>

      <div>
        {{ form_label(form.subject, 'Sujet', {'label_attr': {'class': 'block mb-2 font-semibold text-gray-700'}}) }}
        {{ form_widget(form.subject, {'attr': {'class': 'w-full border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400'}}) }}
        {{ form_errors(form.subject, {'attr': {'class': 'text-red-600 text-sm mt-1'}}) }}
      </div> 

      <div>
        {{ form_label(form.message, 'Message', {'label_attr': {'class': 'block mb-2 font-semibold text-gray-700'}}) }}
        {{ form_widget(form.message, {'attr': {'class': 'w-full border border-gray-300 rounded-md px-4 py-3 h-36 resize-none focus:outline-none focus:ring-2 focus:ring-blue-400'}}) }}
        {{ form_errors(form.message, {'attr': {'class': 'text-red-600 text-sm mt-1'}}) }}
      </div>

      <div class="text-center">
        <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-10 rounded-md shadow transition duration-300">
          Envoyer
        </button>
      </div>

    {{ form_end(form) }}

    {% if successMessage is defined %}
      <p class="mt-8 text-green-600 font-semibold text-center">{{ successMessage }}</p>
    {% endif %}
  </main>

  <footer class="bg-white border-t mt-12 py-6">
    <div class="max-w-7xl mx-auto px-4 text-center text-gray-500 text-sm">
      &copy; {{ "now"|date("Y") }} VitrinePro. Tous droits réservés.
    </div>
  </footer>
</div>
{% endblock %}
